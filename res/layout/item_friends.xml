<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fanxl="http://schemas.android.com/apk/res/com.fanxl.ourtrip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/allPadding"
    android:orientation="horizontal" >

    <com.fanxl.ourtrip.widget.CornerImageView
        android:id="@+id/item_friend_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        fanxl:src="@drawable/img_default_persion"
        fanxl:type="circle" >
    </com.fanxl.ourtrip.widget.CornerImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_friend_icon"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_friend_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名称" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_friend_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/male" />

            <TextView
                android:id="@+id/item_friend_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省份" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/item_friends_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="添加" />

</RelativeLayout>